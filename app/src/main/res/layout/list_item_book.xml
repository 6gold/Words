<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp">

    <!--partA-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <!--cover-->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/iv_booklist_cover"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@mipmap/sample2"/>

        </LinearLayout>

        <!--description-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_booklist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="测试标题"
                android:gravity="center_vertical"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布者："
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/tv_booklist_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试发布者"
                    android:textSize="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="词汇量："
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/tv_booklist_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="测试词汇量"
                    android:textSize="12dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--partB:收藏下载等-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="end">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/favorite_yellow"/>

        <TextView
            android:id="@+id/tv_booklist_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="14dp"
            android:text="收藏量"/>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/download_yellow"/>

        <TextView
            android:id="@+id/tv_booklist_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="下载量"/>

    </LinearLayout>

</LinearLayout>